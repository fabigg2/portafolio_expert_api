{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@apps/*": ["src/apps/*"],
      "@auth/*": ["src/auth/*"]
    }
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
